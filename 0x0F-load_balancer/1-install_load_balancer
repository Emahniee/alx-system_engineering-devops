i#!/usr/bin/env bash
# Setting haproxy as load balancer
sudo apt-get update
sudo apt-get -y install haproxy
printf "\nfrontend hbtn-lb\n
\tbind *:80\n
\tmode http\n
\toption forwardfor\n
\tdefault_backend servers\n\n
backend servers\n\
\tbalance roundrobin\n
\tserver web-01 3.237.6.73\n
\tserver web-02 100.25.140.191:80\n" >> /etc/haproxy/haproxy.cfg
sudo service haproxy start
